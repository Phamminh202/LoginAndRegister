<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.t2010a.loginandregister.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.t2010a.loginandregister.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeAdmin</servlet-name>
        <servlet-class>com.t2010a.loginandregister.controller.admin.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeAdmin</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeUser</servlet-name>
        <servlet-class>com.t2010a.loginandregister.controller.user.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeUser</servlet-name>
        <url-pattern>/user/home</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.t2010a.loginandregister.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin/*/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.t2010a.loginandregister.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/user/*/*</url-pattern>
    </filter-mapping>
</web-app>